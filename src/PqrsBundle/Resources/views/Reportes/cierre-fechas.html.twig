{% extends 'PqrsBundle::base.html.twig' %}
{% block title %}Cierre Fechas Transacciones{% endblock%}
{% block body %}
<div class="reportes-pqrs devoluciones">
    <legend>Cierre Fechas Transacciones</legend>
        {{ form(form) }}

    <table class="table table-hover">
        <tr>
            <td>Teatro</td>
            <td>Fecha y hora de cierre anterior</td>
            <td>Fecha y hora de cierre</td>
            <td>Fecha y hora de cierre real</td>
        </tr>
            {% for re in registro %}
        <tr>
            <td>{{ re.teatro_nombre }}</td>
            {% if(re.mensaje)%}
                <td>{{ re.mensaje }}</td>
                <td></td>
                <td></td>
            {% else %}
                <td>{{ re.cierre_ant }}</td>
                <td>{{ re.cierre }}</td>
                <td>{{ re.fecha_sistema }}</td>
            {% endif %}
        </tr> 
            {% endfor %}

    </table>
</div>
    {% for flashMessage in app.session.flashbag.get('error') %}
<div style="position: relative; padding-top: 50px;" class="flash-notice">
            {{ flashMessage }}
</div>
    {% endfor %}
{% endblock %}